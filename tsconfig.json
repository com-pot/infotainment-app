{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@com-pot/infotainment-app/*": ["src/*"],

      "@custom/*": ["custom/*"],

      "@typeful/data/*": ["./libs/typeful-data/src/*"],
      "@typeful/model/*": ["./libs/typeful-model/src/*"],
      "@typeful/model": ["./libs/typeful-model/src/index.ts"],
      "@typeful/vue-utils/*": ["./libs/@typeful/vue-utils/src/*"],
      "@typeful/vite-custom/*": ["./libs/@typeful/vite-custom/src/*"],

      "@com-pot/schedule/*": ["./libs/com-pot/schedule/src/*"],
    },
  },

  "include": [
    "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue",
    "custom/**/*.ts", "custom/**/*.d.ts", "custom/**/*.tsx", "custom/**/*.vue",
    "libs/**/*.ts", "libs/**/*.d.ts", "libs/**/*.tsx", "libs/**/*.vue",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
